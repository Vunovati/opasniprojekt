<%= provide(:title, 'Sign up') %>
<head>
  <title><%= yield(:title) %></title>
</head>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name, "Ime" %>
      <%= f.text_field :name %>

      <%= f.label :surname, "Prezime" %>
      <%= f.text_field :surname %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password, "Lozinka" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Potvrda lozinke" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Otvori korisnicki racun", :class => "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
