<h1>Accomodations</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>City</th>
      <th>Accomodates</th>
      <th>Type</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @accomodations.each do |accomodation| %>
    <tr>
      <td><%= link_to accomodation.city, accomodation_path(accomodation) %></td>
      <td><%= accomodation.accomodates %></td>
      <td><%= accomodation.accomodation_type %></td>
      <td id ="accomodation<%= accomodation.id %>" >
        <%= link_to 'Edit', edit_accomodation_path(accomodation), :class => 'btn btn-mini' %>
        <%= link_to 'Destroy', accomodation_path(accomodation), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger'%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @accomodations %>

<%= link_to 'New', new_accomodation_path, :class => 'btn btn-primary' %>