<legend><%= controller.action_name.capitalize %> Accomodation</legend>

<%= semantic_form_for @accomodation, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.inputs do %>
      <%= f.input :property_type, :collection => ["Appartment", "House", "Cabin", "Villa", "Hotel"], :hint => "Type of property where accomodation is in"%>
      <%= f.input :accomodation_type, :collection => ["Private room", "Shared room"], :hint => "Where the guests will be staying"%>
      <%= f.input :accomodates, :hint => "Maximum number of guests" %>
      <%= f.input :nightly_rate, :as => :number %>
      <%= f.input :country, :as => :string %>
      <%= f.input :city %>
      <%= f.input :adress_line, :hint => "npr. Ulica Baruna FilipoviÄ‡a 18" %>
      <%= f.input :zip_code, :as => :number, :hint => "npr. 10000" %>
      <%= f.input :contact_email, :as => :email %>
      <%= f.input :contact_phone, :as => :phone %>
      <%= f.input :contact_phone2,:as => :phone %>
      <%= f.input :size, :as => :number, :hint => "In square meters" %>
      <%= f.input :number_of_bathrooms, :as => :range %>
      <%= f.input :number_of_bedrooms, :as => :range %>
      <%= f.input :number_of_beds, :as => :range %>
      <%= f.input :pets_allowed, :as => :radio, :collection => ["Yes!", "No"] %>
  <% end %>
  <%= f.buttons do %>
      <%= f.commit_button :submit, :button_html => { :class => "btn btn-primary", :disable_with => 'Wait...' } %>
  <% end %>
<% end %>