<% provide(:title, " | Sign in") %>
<h1>Sign in</h1>

<div>
  <div class="form">
    <%= form_for(:session, url: sessions_path) do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <div class="form-actions">
      <%= f.submit 'Sign in', :class => "btn btn-large btn-primary" %>
    </div>
    <% end %>
    <p>New user? <%= link_to t('sign_up'), signup_path %></p>
  </div>
</div>
